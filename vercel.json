{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "src/**",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "src/app.tsx"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/app.tsx"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/$1"
    }
  ],
  "installCommand": "npm install --legacy-peer-deps && npm install --prefix client --legacy-peer-deps"
}
